---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href = '', class: className, ...props } = Astro.props;

// Ensure internal links work on GitHub Pages project sites where BASE_URL is '/<repo>/'.
const base = import.meta.env.BASE_URL;
const resolvedHref = href.startsWith('/') ? (href === '/' ? base : `${base}${href.slice(1)}`) : href;

// Active state should compare against the path *within* the base.
const pathname = Astro.url.pathname.replace(base, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '') || (href === '/' && pathname === '');
---

<a href={resolvedHref} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
